<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:width="10dp"
        android:height="10dp"
        android:bottom="10dp"
        android:gravity="center_horizontal"
        >

            <shape
                android:shape="oval"  >

                <solid
                    android:color="#000000"  />
            </shape>

    </item>

    <item
        android:width="2dp"
        android:height="20dp"
        android:gravity="center_horizontal"
        android:top="10dp">

        <shape android:shape="rectangle">

            <solid
                android:color="#000000"  />
        </shape>

    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.MainFeedFragment"
    android:background="@color/app_blue"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >

            <androidx.appcompat.widget.Toolbar
                android:layout_height="50dp"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp"
                app:contentInsetRight="0dp"
                app:layout_scrollFlags="scroll|enterAlways">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Likon"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="italic|bold"
                    android:typeface="serif" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/uploads"
                    >

                    <ImageView
                        android:id="@+id/upload_image"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_outline_add_to_photos_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/badge_upload"
                        android:layout_marginTop="6dp"
                        android:id="@+id/upload_badge"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </RelativeLayout>


            </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_feeds_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_feeds_users"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layoutDirection="inherit"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:visibility="gone"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/loader"
        android:visibility="visible"
        app:cardCornerRadius="25dp"
        >
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/no_result"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_search_off_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No followers found!"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/network_error"
        android:layout_gravity="center"
        android:visibility="gone"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry!"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:id="@+id/retry"
            android:src="@drawable/ic_baseline_replay_24"
            android:background="@android:color/transparent"/>

    </LinearLayout>


</FrameLayout>